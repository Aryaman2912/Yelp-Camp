<%- include("partials/header") %>

<div class="container">

	<header class="jumbotron container">
		<h1>Welcome to Yelp Camp!</h1>
		<p>The best of campgrounds specially selected just for you!</p>
		<p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campground</a></p>	
	</header>


	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<div class="col-lg-12">
			<h3>Popular Campgrounds</h3>
		</div>
		<% campgrounds.forEach(function(camp){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= camp.image %>"</img>
				<div class="caption">
					<h4><%= camp.name %></h4>
				</div>
				<p><a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More info</a></p>
			</div>
		</div>
		<% }); %>
	</div>
</div>

<%- include("partials/footer") %>

